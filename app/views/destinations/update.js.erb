var destinations = $("#show-destinations");
destinations.append("<%= escape_javascript(render partial: "destinations/destination",
					   locals: { destination: @destination }) %>");

<% @todo_items.each do |todo_item| %>
  var todoItemId = $("#destination_<%= @destination.id %>_todo_items");
  todoItemId.append("<%= escape_javascript(render partial: "todo_items/todo_item",
					   locals: { todo_item: todo_item }) %>");
  map.addMarker(<%= todo_item.lat %>, <%= todo_item.lng%>);
  map.updateBounds();
<% end %>
