var destinations = $("#show-destinations");
var destinationPartial = "<%= escape_javascript(render partial: "destinations/destination", locals: { destination: @destination }) %>";
destinations.append(destinationPartial);

<% @destinations.each do |destination| %>
  <% destination.todo_items.each do |todo_item| %>
    var todoItemId = $("#destination_<%= destination.id %>_todo_items");
    todoItemId.append("<%= escape_javascript(render partial: "todo_items/todo_item", 
					     locals: { todo_item: todo_item }) %>");
//Pin a marker on the map
  map.addMarker(<%= todo_item.lat %>, <%= todo_item.lng%>);
//  map.updateBounds();
  <% end %>
<% end %>


